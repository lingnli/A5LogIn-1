<div class="container text-center">
  <h1>Account Login</h1>

  <form method="POST" class="mt-4" action="/login">

    <div class="form-group mx-auto">
      <input type="email" class="form-control border-dark rounded-0" id="exampleInputEmail1" name="email"
        aria-describedby="emailHelp" placeholder="Email">
    </div>

    <div class="form-group mx-auto">
      <input type="password" class="form-control border-dark rounded-0" id="exampleInputPassword1" name="password"
        placeholder="Password">
    </div>

    {{#if error}}
    <div class="alert alert-danger mx-auto" role="alert">
      {{error}}
    </div>
    {{/if}}

    <button type="submit" class="btn text-dark bg-light border-dark rounded shadow px-3 mt-3">Sign in</button>

  </form>
</div>